<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
  <definition name="root.*" template="/WEB-INF/views/inc/layout.jsp">
    <put-attribute name="aside" value="/WEB-INF/views/inc/aside.jsp" />
    <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
    <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
  </definition>
  
  <definition name="event.*" template="/WEB-INF/views/customer/inc/layout.jsp">
    <put-attribute name="aside" value="/WEB-INF/views/customer/inc/aside.jsp" />
    <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
    <put-attribute name="body" value="/WEB-INF/views/customer/event/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
  </definition>
  
  <definition name="login.*" template="/WEB-INF/views/login/inc/layout.jsp">
    <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
    <put-attribute name="body" value="/WEB-INF/views/login/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
  </definition>
  
  <definition name="admin.*" template="/WEB-INF/views/admin/inc/layout.jsp">
    <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
    <put-attribute name="aside" value="/WEB-INF/views/admin/inc/aside.jsp" />
    <put-attribute name="body" value="/WEB-INF/views/admin/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
  </definition>
</tiles-definitions>